    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
        },
        {
            "program": "${workspaceFolder}/build/src/o2game",
            "name": "Game - Linux Debug",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "cwd": "${workspaceFolder}/build/src",
        },
        {
            "program": "${workspaceFolder}/build/src/o2game.exe",
            "name": "Game - Windows Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "args": [],
            "cwd": "${workspaceFolder}/build/src",
        },
        {
            "name": "Game - Compile and Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "cmake-msvc-build",
            "program": "${workspaceFolder}/build/src/o2game.exe",
            "cwd": "${workspaceFolder}/build/src",
            "args": []
        }
    ]
}